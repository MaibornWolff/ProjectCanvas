{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "@canvas/*": ["./src/*"],
      "@canvas/types": ["types/index.ts"],
      "@canvas/types/*": ["types/*"],
      "@canvas/electron/*": ["electron/*"],
      "@lib": ["lib/*"],
      "styles/*": ["src/assets/styles/*"]
    },
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "electron", "e2e", "src/test/setup-jest.ts"]
}
